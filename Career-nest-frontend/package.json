{
  "name": "job-portal-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^8.3.3",
    "@mantine/hooks": "^8.3.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "prestart": "npm run build:css",
    "prebuild": "npm run build:css",
    "start:cra": "react-scripts start",
    "start": "npm run start:dev",
    "start:dev": "concurrently -n CRA,TAILWIND -c yellow,cyan \"npm:start:cra\" \"npm:dev:css\"",
    "build": "react-scripts build",
    "dev:css": "tailwindcss -i ./src/tailwind.css -o ./src/index.tailwind.css --watch --content ./src/**/*.{js,jsx,ts,tsx,html} --content ./public/index.html",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./src/index.tailwind.css --minify --content ./src/**/*.{js,jsx,ts,tsx,html} --content ./public/index.html",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  }
}
